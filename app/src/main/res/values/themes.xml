<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AppDefault" parent="Theme.MaterialComponents.DayNight">
        <item name="colorAccent">#0073FF</item>
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!--  color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- status bar -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- magic -->
        <item name="actionBarTheme">@style/ThemeOverlay.AppDefault.ActionBar</item>
        <item name="actionBarStyle">@style/Widget.AppDefault.ActionBar</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">#00000000</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">
            shortEdges
        </item>

        <!-- BaseBottomSheetDialogFragment round corners -->
        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>
    </style>

    <!-- Translucent Activity for Shadow Dialog Host -->
    <style name="Theme.AppDefault.Translucent">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">
            shortEdges
        </item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:title">@null</item>
        <item name="android:dialogTitle">@null</item>
    </style>

    <style name="Widget.AppDefault.ActionBar" parent="@style/Widget.MaterialComponents.Light.ActionBar.Solid">
        <item name="elevation">0dp</item>
        <item name="background">?android:colorBackground</item>
        <item name="backgroundSplit">?android:colorBackground</item>
        <item name="backgroundStacked">?android:colorBackground</item>
        <item name="android:statusBarColor">#00000000</item>
    </style>

    <style name="ThemeOverlay.AppDefault.ActionBar" parent="">
        <item name="android:background">?android:colorBackground</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="background">?android:colorBackground</item>
        <item name="backgroundSplit">?android:colorBackground</item>
        <item name="backgroundStacked">?android:colorBackground</item>
        <item name="android:statusBarColor">#00000000</item>
    </style>

    <style name="Theme.AppDefault.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- style name="Theme.AppDefault.AppBarOverlay" parent="ThemeOverlay.AppCompat.DayNight.ActionBar" /-->

    <style name="Theme.AppDefault.PopupOverlay" parent="ThemeOverlay.AppCompat.DayNight" />

    <style name="Widget.Button.FatFlat" parent="">
        <item name="android:textColor">@color/stateful_accent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">clip_horizontal</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?android:attr/listPreferredItemHeight</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:drawablePadding">24dp</item>
        <item name="android:paddingStart">?android:attr/listPreferredItemPaddingStart</item>
        <item name="android:paddingEnd">?android:attr/listPreferredItemPaddingEnd</item>
    </style>

</resources>
