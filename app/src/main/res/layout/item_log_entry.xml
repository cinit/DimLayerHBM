<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_ripple_rect"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/item_logEntry_priority"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/log_level_debug"
        android:gravity="center"
        android:minWidth="16dp"
        android:text="P"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:typeface="monospace" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/item_logEntry_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="tag"
            android:textColor="?android:textColorPrimary"
            android:textIsSelectable="true"
            android:textSize="13sp"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/item_logEntry_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:text="message"
            android:textColor="?android:textColorPrimary"
            android:textIsSelectable="true"
            android:textSize="12sp"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/item_logEntry_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="time"
            android:textColor="@color/thirdTextColor"
            android:textIsSelectable="true"
            android:textSize="12sp"
            android:typeface="monospace" />

    </LinearLayout>

</LinearLayout>
